rule block:
    b <- "grammar" "{" g:@grammar "}" ";" b:@adapt(g, block)
    s :: b <- s:stmt ";" b:block
    [] <- ""

rule stmt:
    Expr(e) <- e:expr
    Do() <- "do"

rule expr:
    -- additive
    Add(x, y) <- x:@next "+" y:@this
    -- base
    Block(b) <- "{" b:block "}"
    X() <- "x"
    Y() <- "y"

rule layout = [' ' | '\n']
