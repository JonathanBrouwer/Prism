rule block:
    b <- "grammar" "{" g:@grammar "}" ";" b:@adapt(g, block)
    s :: b <- s:stmt ";" b:block
    [] <- ""

rule stmt:
    Expr(e) <- e:expr

rule expr:
    Var(i) <- i:integer

rule integer:
    @error("Integer")
    @disable_layout
    @disable_recovery
    n <- n:@str([ '0'-'9' ]+)

rule layout = [' ' | '\n']
